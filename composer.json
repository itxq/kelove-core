{
    "name"        : "itxq/kelove-core",
    "description" : "kelove-core kelove框架核心类库",
    "type"        : "library",
    "license"     : "Apache-2.0",
    "authors"     : [
        {
            "name" : "IT小强xqitw.cn",
            "email": "mail@xqitw.cn"
        }
    ],
    "require"     : {
        "php"                 : ">=7.1.0",
        "ext-pdo"             : "*",
        "ext-zlib"            : "*",
        "ext-curl"            : "*",
        "ext-json"            : "*",
        "ext-gd"              : "*",
        "ext-iconv"           : "*",
        "guzzlehttp/guzzle"   : "^6.3",
        "topthink/think-image": "^1.0"
    },
    "require-dev" : {
        "topthink/framework" : "5.2.*-dev",
        "itxq/ckfinder"      : "^1.0",
        "itxq/builder"       : "dev-master",
        "itxq/builder-assets": "dev-master"
    },
    "autoload"    : {
        "psr-4": {
            "kelove\\": "src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "app\\" : "app",
            "test\\": "test"
        },
        "files": [
            "test/info.php"
        ]
    },
    "extra"       : {
        "installer-paths": {
            "public/static/{$name}": ["itxq/builder-assets"]
        }
    }
}
